#!/usr/bin/env bash
set -euo pipefail

cat > /workspace/pkg/handler/process.go <<'EOF'
package handler

import (
    "errors"
    "log"
)

func ProcessData(data string) error {
    result, err := transform(data)
    if err != nil {
        return err
    }
    if err := send(result); err != nil {
        return err
    }
    return nil
}

func transform(s string) (string, error) {
    if s == "" {
        return "", errors.New("empty input")
    }
    return s + " processed", nil
}

func send(result string) error {
    if result == "" {
        return errors.New("nothing to send")
    }
    log.Printf("Sending: %s", result)
    return nil
}
EOF

mkdir -p /output
